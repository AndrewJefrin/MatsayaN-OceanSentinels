# Server Configuration
PORT=3000
NODE_ENV=development

# Firebase Configuration
FIREBASE_PROJECT_ID=uyir-kavalan
FIREBASE_STORAGE_BUCKET=uyir-kavalan.appspot.com
FIREBASE_DATABASE_URL=https://uyir-kavalan-default-rtdb.firebaseio.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API Keys
OPENWEATHER_API_KEY=your-openweather-api-key
WEATHER_NEWS_API_KEY=your-weather-news-api-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,https://yourdomain.com

# Database Configuration
DB_HOST=localhost
DB_PORT=27017
DB_NAME=uyir_kavalan

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# SMS Configuration (for emergency alerts)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SOS Emergency Configuration
SOS_AUTO_NOTIFY=true
SOS_NOTIFY_AUTHORITIES=true
SOS_NOTIFY_NEARBY_BOATS=true
EMERGENCY_RESPONSE_TIME=300
SOS_BROADCAST_RADIUS=10

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100 